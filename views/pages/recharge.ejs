<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nạp tiền</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Edu+NSW+ACT+Foundation:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@600&family=Edu+NSW+ACT+Foundation:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="./public/assest/css/recharge.css">
</head>
<body>
    <%- include('../partials/navbar.ejs'); %>
    <header>
        <div class="d-flex align-items-center">
            <div id="bars-for-mobile" class="close">
                <div>
                    <i class="fa-solid fa-bars"></i>
                </div>
                <div id="bur-for-mobile"></div>
                <ul id="nav-for-mobile">
                    <div>
                        <div class="title">
                            <span></span>
                            <i class="fa-solid fa-xmark"></i>
                        </div>
                        <li class="home-mobile">
                            <span></span>
                            <a href="/">
                                <i class="fa-solid fa-house"></i>
                                <span>Trang Chủ</span>
                            </a>
                        </li>
                        <li class="recharge-money-mobile running-page">
                            <span></span>
                            <a href="/recharge-money">
                                <i class="fa-solid fa-piggy-bank"></i>
                                <span>Nạp Tiền</span>
                            </a>
                        </li>
                        <li class="purchase-mobile">
                            <span></span>
                            <a href="/purchase">
                                <i class="fa-solid fa-cart-shopping"></i>
                                <span>Lịch Sử Mua Hàng</span>
                            </a>
                        </li>
                        <li class="manage-mobile">
                            <span></span>
                            <a href="/manage">
                                <i class="fa-solid fa-gear"></i>
                                <span>Quản lý hoạt động phòng (For Host)</span>
                            </a>
                        </li>
                        <li class="infor-member-mobile">
                            <span></span>
                            <a href="/information-member">
                                <i class="fa-solid fa-user"></i>
                                <span>Thay Đổi Thông Tin</span>
                            </a>
                        </li>
                        <li class="guide-mobile">
                            <span></span>
                            <a href="/guide">
                                <i class="fa-solid fa-book"></i>
                                <span>Hướng dẫn sử dụng</span>
                            </a>
                        </li>
                    </div>
                    <div class="no-selection logout">
                        <a href="/login">
                            <i class="fa-solid fa-right-from-bracket"></i>
                            <span>Log Out</span>
                        </a>
                    </div>
                </ul>
            </div>
            <div id="pages">
                <h1 class="d-flex justify-content-center align-items-center">
                    Nạp tiền
                </h1>
            </div>
            <%- include('../partials/header.ejs'); %>
        </div>
    </header>
    <main>
        <div>
            <div class="date-time">
                <span class="fs-20"></span>
            </div>
            <%- include('../partials/mainRecharge.ejs'); %>
        </div>
    </main>
    <!-- Modal nạp tiền -->
    <div class="model-up-server" data-open="0" data-identity="recharge">
        <div class="blur-screen"></div>
        <div class="model-main">
            <div class="container">
                <div class="model-header">
                    <span class="fs-24">Nạp tiền</span>
                </div>
                <div class="model-main-main">
                    <label for="recharge-money">Nhập số tiền bạn muốn nạp:</label><br>
                    <input type="number" id="recharge-money">
                </div>
                <div class="model-footer">
                    <button class="model-cancel" type="button" onclick="closeModelUpServer()">Hủy</button>
                    <button class="model-confirm" type="button" data-bs-toggle="modal" data-bs-target="#confirm-recharge">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal rút tiền-->
    <div class="model-up-server" data-open="0" data-identity="withdraw">
        <div class="blur-screen"></div>
        <div class="model-main">
            <div class="container">
                <div class="model-header">
                    <span class="fs-24">Rút tiền</span>
                </div>
                <div class="model-main-main">
                    <label for="withdraw-money">Nhập số tiền bạn muốn rút:</label><br>
                    <input type="number" id="withdraw-money">
                </div>
                <div class="model-footer">
                    <button class="model-cancel" type="button" onclick="closeModelUpServer()">Hủy</button>
                    <button class="model-confirm" type="button" data-bs-toggle="modal" data-bs-target="#confirm-withdraw">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal xác nhận nạp tiền-->
    <div class="modal fade" style="color: #000;" id="confirm-recharge" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Xác nhận</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <!-- Modal xác nhận rút tiền-->
    <div class="modal fade" style="color: #000;" id="confirm-withdraw" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Xác nhận</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Xác nhận hủy nạp rút tiền -->
    <div class="modal fade" style="color: #000;" id="confirm-del-recharge-withdraw" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Xác nhận</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
    <script>
        const rechargeNavElement = document.querySelector('#menu > .recharge-money')
        rechargeNavElement.classList.add('running-page')
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.0.0-alpha.1/axios.min.js" integrity="sha512-xIPqqrfvUAc/Cspuj7Bq0UtHNo/5qkdyngx6Vwt+tmbvTLDszzXM0G6c91LXmGrRx8KEPulT+AfOOez+TeVylg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="./public/assest/js/subpages/functionGenaration.js"></script>
    <script src="./public/assest/js/subpages/lightOrDark.js"></script>
    <script src="./public/assest/js/subpages/getInforMember.js"></script>
    <script src="./public/assest/js/subpages/getHistory.js"></script>
    <script src="./public/assest/js/recharge.js"></script>
</body>
</html>